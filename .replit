modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["haskellPackages.hello", "zsh"]

[workflows]
runButton = "Poetry Test"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Runner"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test_package"

[[workflows.workflow]]
name = "Test Runner"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install -e . && pip install pytest pytest-cov && python -m pytest tests/ -v"

[[workflows.workflow]]
name = "test_package"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install -e . && pip install pytest && python -m pytest tests/ -v"

[[workflows.workflow]]
name = "Serve Docs"
author = 2522186
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdocs serve --dev-addr=0.0.0.0:5000"

[[workflows.workflow]]
name = "Poetry Test"
author = 2522186
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "poetry install --no-interaction"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "poetry run pytest tests/ -v"
